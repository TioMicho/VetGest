@model VetGest.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DueñoNombre" class="control-label"></label>
                <input asp-for="DueñoNombre" class="form-control" />
                <span asp-validation-for="DueñoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueñoApellido" class="control-label"></label>
                <input asp-for="DueñoApellido" class="form-control" />
                <span asp-validation-for="DueñoApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Domicilio" class="control-label"></label>
                <input asp-for="Domicilio" class="form-control" />
                <span asp-validation-for="Domicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-warning" role="button" asp-action="Index">Regresar a la lista</a>
    <a class="btn btn-outline-danger" role="button" asp-action="Delete" asp-route-id="@Model.ID">¿Borrar?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
